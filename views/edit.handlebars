<div class="row">
  <div class="col-auto">
    <h2>Welcome, {{username}}!</h2>
  </div>
</div>

<div class="row mt-4">
  <div class="col-md-6">
    <h3>Edit Your Post:</h3>
    <h6 id="postUpdate">{{id}}</h6>

    <form class="form new-comment-form">
      <div class="form-group">
        <label for="post-name">Post Title:</label>
        <input class="form-input" type="text" id="post_name" name="post-name" value={{name}} />
      </div>
      <div class="form-group">
        <label for="post-content">Post:</label>
        <textarea class="form-input" id="post_content" name="post-content">{{post_content}}</textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary" >Update</button>
      </div>
      <div class="form-group project-list">
        <button class="btn btn-sm btn-danger" data-id="{{id}}">DELETE</button>
      </div>
    </form>
  </div>

 
</div>

<script src="/js/edit.js"></script>