<div class="row">
  <div class="col-auto">
    <h2>Welcome, {{username}}!</h2>
  </div>
</div>

<div class="row mt-4">
  <div class="col-md-6">
    <h3>Create a New Post:</h3>

    <form class="form new-comment-form">
      <div class="form-group">
        <label for="post-name">Post Title:</label>
        <input class="form-input" type="text" id="post_name" name="post-name" />
      </div>
      <div class="form-group">
        <label for="post-content">Post:</label>
        <textarea class="form-input" id="post_content" name="post-content"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Create</button>
      </div>
    </form>
  </div>

  <div class="col-md-6 project-list">
    <h3>Current Posts:</h3>
    {{#each posts as |post|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h4><a href="/edit/{{id}}">{{name}}</a></h4>
      </div>
      <div class="col-md-4">
        <button class="btn btn-sm btn-danger" data-id="{{id}}">DELETE</button>
      </div>
      <div class="col-md-4">
        <a href="/edit/{{id}}"><button>EDIT</button></a>
      </div>
    </div>
    {{/each}}
  </div>
 
</div>

<script src="./js/post.js"></script>