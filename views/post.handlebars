
<div class="text-center">
  <h2>{{name}}</h2>
  
  <p>{{post_content}}</p>
  <p id="postid">{{id}}</p>
  <p>Created by {{user.username}} on {{format_date date_created}}</p>
  <h3>Comments</h3>
  {{#each comments as |comment|}}
<div class="card" id="maybeComments">            
            <h5>{{comment.comment_text}}</h5>
            <div id="userCards">
            <ul>
                <li>{{format_date comment.date_created}}</li>
                <li>posted by {{comment.user.username}}</li>
            </ul>
            </div>
        </div>
{{/each}}
</div>
<h3>Would you like to add a comment?</h3>
<form class="form comment-form">
      <div class="form-group">
        <label for="comment">comment:</label>
        <input class="form-input" type="text" id="comment" />
      </div>
      <div class="form-group">
        <button class="btn btn-primary" type="submit" id="submit-btn">Leave a Comment</button>
      </div>
</form>




<script src="/js/comment.js"></script>